<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#bfbfbf"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/locationPhoto"
        android:layout_width="240dp"
        android:layout_height="135dp"
        android:src="@drawable/lighthouse"
        android:adjustViewBounds="true"></ImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/popupTolietIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:src="@drawable/wc_icon"></ImageView>

        <ImageView
            android:id="@+id/popupWifiIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:src="@drawable/wifi_icon"></ImageView>

        <ImageView
            android:id="@+id/popupPowerIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:src="@drawable/power_icon"></ImageView>

        <ImageView
            android:id="@+id/popupAccesibilityIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:src="@drawable/accessibility_icon"></ImageView>

        <ImageView
            android:id="@+id/popupSunIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:src="@drawable/weather_icon"></ImageView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/latlng"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
