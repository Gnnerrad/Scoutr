<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="400dp"
    android:background="#fedcba"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/locationPhoto"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:adjustViewBounds="true"
        android:background="#1212ad"></ImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2">

        <TableRow
            android:id="@+id/Ono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">


            <ImageView
                android:id="@+id/popupTolietIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pin"
                android:adjustViewBounds="true"
                android:background="#d11dd1"></ImageView>

            <TextView
                android:id="@+id/OneTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#33cc66"
                android:textColor="#ff7f7f7f"
                android:textSize="14dp" />

        </TableRow>

        <TableRow
            android:id="@+id/Two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/popupWifiIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pin"
                android:adjustViewBounds="true"
                android:background="#c55cc5"></ImageView>

            <TextView
                android:id="@+id/TwoTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#44ff77"
                android:textColor="#ff7f7f7f"
                android:textSize="14dp" />

        </TableRow>

    </LinearLayout>

</LinearLayout>
